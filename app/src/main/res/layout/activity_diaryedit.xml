<?xml version="1.0" encoding="utf-8"?>


<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary_black_t"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="50dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="50dp"
    android:layout_weight="0"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <com.example.zzyyff.flowerrecords.HeadZoomScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_weight="0">

                <ImageView
                    android:id="@+id/dia_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"

                    android:scaleType="centerCrop"
                    android:src="@drawable/qqq" />

                <ImageView
                    android:id="@+id/return_bar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0"
                    android:visibility="visible"
                    app:srcCompat="@drawable/return_bar" />

                <ImageView
                    android:id="@+id/return_bar_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/ok_bar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0"
                    app:srcCompat="@drawable/complete" />

                <ImageView
                    android:id="@+id/ok_bar_image"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0" />

                <ImageView
                    android:id="@+id/wheather_show"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:tint="#fff"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="10dp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:orientation="vertical"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/datetext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="二零一八年五月二十日"
                        android:textColor="@color/colorAccent"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/city_show"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_weight="5"
                        android:gravity="center"
                        android:textSize="13sp" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/property_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0"
                    android:gravity="center"
                    android:text="食 "
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/mytext"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/dia_image"
                    android:layout_weight="0"
                    android:background="#fff"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="此处编辑正文"
                    android:inputType="none"
                    android:lineSpacingExtra="8sp"
                    android:maxLines="100"
                    android:singleLine="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/property_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="0"
                    android:gravity="right"
                    android:text="食 ↑"
                    android:visibility="gone" />


            </LinearLayout>

        </LinearLayout>
    </com.example.zzyyff.flowerrecords.HeadZoomScrollView>

</android.support.v7.widget.CardView>

</FrameLayout>